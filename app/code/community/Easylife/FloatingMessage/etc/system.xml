<config>
    <sections>
        <easylife_floatingmessage translate="label" module="easylife_floatingmessage">
            <label>Floating Messages</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label" module="easylife_floatingmessage">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label" module="easylife_floatingmessage">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <selector translate="label" module="easylife_floatingmessage">
                            <label>DOM Selector</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </selector>
                        <show translate="label" module="easylife_floatingmessage">
                            <label>Show Effect</label>
                            <frontend_type>select</frontend_type>
                            <source_model>easylife_floatingmessage/source_show</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </show>
                        <hide translate="label" module="easylife_floatingmessage">
                            <label>Hide Effect</label>
                            <frontend_type>select</frontend_type>
                            <source_model>easylife_floatingmessage/source_hide</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </hide>
                        <timeout translate="label comment" module="easylife_floatingmessage">
                            <label>Auto hide after x seconds</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>0 or empty for no auto-hide</comment>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </timeout>
                        <modal translate="label" module="easylife_floatingmessage">
                            <label>Modal</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </modal>
                        <position translate="label" module="easylife_floatingmessage">
                            <label>Position</label>
                            <frontend_type>select</frontend_type>
                            <source_model>easylife_floatingmessage/source_position</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </position>
                        <style translate="label" module="easylife_floatingmessage">
                            <label>Style</label>
                            <frontend_type>select</frontend_type>
                            <source_model>easylife_floatingmessage/source_style</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </style>
                    </fields>
                </settings>
            </groups>
        </easylife_floatingmessage>
    </sections>
</config>